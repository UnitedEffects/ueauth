extends layout

block content
    body(style="background: url(https://s3.amazonaws.com/ue-platform-content/background.jpg) no-repeat center center fixed;")
        script(type="text/javascript").
            const url = '#{url}';
            const iat = '#{iat}';
            const redirect = '#{redirect}'
            const retryUrl = '#{retryUrl}'
        script
            include forgotSend.js
        section#head.section
            .row
                .col-lg-12
                    .h-100.p-5.bg-light.rounded-3(style="max-width: 800px; margin: auto; margin-top: 50px; box-shadow: 1px 1px 2px slategrey;")
                        h2(id='title')=title
                        h3=client.clientName
                        if (authGroupName !== client.clientName)
                            h4=authGroupName
                        if flash
                            p(id='message')= flash
                        form.m-t-10(id='forgot' autocomplete='off')
                            input(required='', type='password', name='password', placeholder='new password')
                            input(required='', type='password', name='confirm-password', placeholder='confirm your password')
                            button.btn.btn-outline-dark(type='submit') Set My Password
                        if redirect
                            form.invisible.m-t-10(id='gotoSite' autocomplete='off' action=redirect)
                                button.btn.btn-outline-dark(type='submit') Go To Site
                        form.invisible.m-t-10(id='tryAgain' autocomplete='off')
                            input(id='t1' required='', type='text', name='email', placeholder='your email')
                            button.btn.btn-outline-dark(id='retry' type='submit') Send Password Reset
                        .m-t-10
                            if (tosUri || (authGroup && authGroup.primaryTOS))
                                a(href=(tosUri || authGroup.primaryTOS)) [ Terms of Service ]
                            if (policyUri || (authGroup && authGroup.primaryPrivacyPolicy))
                                a(href=(policyUri || authGroup.primaryPrivacyPolicy) style="margin-left: 5px") [ Privacy Policy ]
