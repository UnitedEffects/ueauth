extends layout

block content
    body(style="background: url(" + assets + "img/legacy-background.jpeg) no-repeat center center fixed;")
        section#head.section
            .row
                .col-lg-12
                    .h-100.p-5.bg-light.rounded-3(style="max-width: 800px; margin: auto; margin-top: 50px; box-shadow: 1px 1px 2px slategrey;")
                        h2=title
                        p=message
                        form.m-t-20(id=formId method="post" action=actionUrl)
                            input(type="hidden" name=inName value=secret)
                            button.btn.btn-outline-dark.m-r-5(type="submit" autofocus form=formId value="yes" name="logout") Sign Out
                            button.btn.btn-outline-dark(type="submit" form=formId) Cancel
                        .m-t-10
                            if (tosUri || (authGroup && authGroup.primaryTOS))
                                a(href=(tosUri || authGroup.primaryTOS)) [ Terms of Service ]
                            if (policyUri || (authGroup && authGroup.primaryPrivacyPolicy))
                                a(href=(policyUri || authGroup.primaryPrivacyPolicy) style="margin-left: 5px") [ Privacy Policy ]